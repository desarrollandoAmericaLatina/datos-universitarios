<h1>Listing universities</h1>

<table border="1">
  <tr>
    <th>University name</th>
    <th>Alias</th>
    <th>fundation</th>
    <th>address</th>
    <th>city</th>
	<th>rector</th>
	<th>students</th>
	<th></th>
	<th></th>
	<th></th>
  </tr>

<% @universities.each do |university| %>
  <tr>
    <td><%= university.name %></td>
    <td><%= university.alias %></td>
    <td><%= university.fundation %></td>
    <td><%= university.address %></td>
    <td><%= university.city %></td>
    <td><%= university.rector %></td>
    <td><%= university.students %></td>
    <td><%= link_to 'Show', [:admin, university] %></td>
    <td><%= link_to 'Edit', edit_admin_university_path(university) %></td>
    <td><%= link_to 'Destroy', [:admin, university], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

