<% content_for :head do %>
  <%= javascript_include_tag "/js/highcharts.js" %>
<% end %>
<h1>Universities#index</h1>

<p>Find me in app/views/universities/index.html.erb</p>
<div class='container' id='container'></div>
<script>
var chart;
$(document).ready(function() {
   chart = new Highcharts.Chart({
      chart: {
         renderTo: 'container',
         defaultSeriesType: 'line',
         marginRight: 130,
         marginBottom: 25
      },
      title: {
         text: 'Presupuesto mensual',
         x: -20 //center
      },
      subtitle: {
         text: 'Fuente: Ministerio de educaci√≥n',
         x: -20
      },
      xAxis: {
         categories: <%= raw @months.inspect %>
      },
      yAxis: {
         title: {
            text: 'Pesos ($)'
         },
         plotLines: [{
            value: 0,
            width: 1,
            color: '#808080'
         }]
      },
      tooltip: {
         formatter: function() {
                   return '<b>'+ this.series.name +'</b><br/>'+
               this.x +': $'+ this.y;
         }
      },
      legend: {
         layout: 'vertical',
         align: 'right',
         verticalAlign: 'top',
         x: -10,
         y: 100,
         borderWidth: 0
      },
      series: [{
         name: 'UBA',
         data: <%= raw @money.map { |m| m.to_i }%>
      }]
   });  
});
</script>
